<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="Theme.SplashScreen" parent="Theme.SplashScreen.Base">
  </style>
  <style name="Theme.SplashScreen.Base" parent="Maui.MainTheme.NoActionBar">
    <item name="android:windowNoTitle">true</item>  
    <item name="android:windowFullscreen">true</item>  
    <item name="android:windowContentOverlay">@null</item>  
    <item name="android:windowActionBar">true</item>
  </style>

  <style name="Theme.RideCommand" parent="Theme.RideCommand.Base">
  </style>
  <style name="Theme.RideCommand.Base" parent="Maui.MainTheme.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

   <style name="Theme.RideCommand.TopTab" parent="TextAppearance.Design.Tab">
     <item name="textAllCaps">false</item>
     <item name="android:textAllCaps">false</item>
     <item name="tabTextAppearance">@android:attr/textAppearanceSmall</item>
   </style>
</resources>
